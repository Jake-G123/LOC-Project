<body>
    <!-- For later -->
    <%- include('partials/header') %>
    
    <div class="edit-division-container">

        <% division.forEach(d => { %>
        <fieldset class="<%= d.DeadlineUpcoming === 'Yes' ? 'deadline-upcoming-yes' : '' %>">
            <div class="title-row">
                <h3><%= d.DivisionName %></h3>
                <img src="images/angle_up.png" alt="Toggle Details" class="toggle-button">
            </div>

            <div class="details hidden">
                <form action="/submit-division" method="POST">
                    <input type="hidden" name="division_id" value="<%= d.ProgramID %>">

                    <div class="division-name">
                        <label for="divName-<%= d.ProgramID %>">Division: 
                            <input type="text" id="divName-<%= d.ProgramID %>" name="divName" value="<%= d.DivisionName %>">
                        </label>
                    </div>

                    <div class="chair">
                        <label for="chair-<%= d.ProgramID %>">Chair: 
                            <input type="text" id="chair-<%= d.ProgramID %>" name="chair" value="<%= d.DivisionChair %>">
                        </label>
                    </div>

                    <div class="dean">
                        <label for="dean-<%= d.ProgramID %>">Dean: 
                            <input type="text" id="dean-<%= d.ProgramID %>" name="dean" value="<%= d.Dean %>">
                        </label>
                    </div>

                    <div class="loc">
                        <label for="loc-<%= d.ProgramID %>">LOC Rep: 
                            <input type="text" id="loc-<%= d.ProgramID %>" name="loc" value="<%= d.LOCRep %>">
                        </label>
                    </div>

                    <div class="pen">
                        <label for="pen-<%= d.ProgramID %>">PEN Contact: 
                            <input type="text" id="pen-<%= d.ProgramID %>" name="pen" value="<%= d.PENContact %>">
                        </label>
                    </div>

                    <div class="deadline-upcoming">
                        <label for="deadline-<%= d.ProgramID %>"> Deadline Upcoming:
                            <input type="hidden" name="deadlineUpcoming" value="No">
                            <input type="checkbox" id="deadline-<%= d.ProgramID %>" name="deadlineUpcoming" value="Yes" 
                                <%= d.DeadlineUpcoming === 'Yes' ? 'checked' : '' %>>
                        </label>
                    </div>

                    <div class="buttons">
                        <button type="submit" class="save-btn">Save</button>
                        <button type="reset" class="cancel-btn">Cancel</button>
                    </div>
                </form>
            </div>
        </fieldset>
        <% }) %>

    </div>



